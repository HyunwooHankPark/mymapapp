import streamlit as st
import yfinance as yf
import plotly.graph_objects as go
from datetime import datetime, timedelta

# í˜ì´ì§€ ì„¤ì •
st.set_page_config(page_title="ê¸€ë¡œë²Œ ì‹œì´ Top10 ê¸°ì—… ì£¼ê°€", layout="wide")
st.title("ğŸŒ ê¸€ë¡œë²Œ ì‹œì´ Top10 ê¸°ì—… ìµœê·¼ 3ë…„ ì£¼ê°€ ë³€ë™")

# ê¸€ë¡œë²Œ ì‹œì´ Top10 í‹°ì»¤ ì˜ˆì‹œ (2025ë…„ ê¸°ì¤€ ìµœì‹  ì˜ˆìƒ)
top10_tickers = {
    'Apple': 'AAPL',
    'Microsoft': 'MSFT',
    'Saudi Aramco': '2222.SR',
    'Alphabet': 'GOOGL',
    'Amazon': 'AMZN',
    'NVIDIA': 'NVDA',
    'Berkshire Hathaway': 'BRK-B',
    'Meta': 'META',
    'TSMC': 'TSM',
    'Tesla': 'TSLA'
}

# ê¸°ê°„ ì„¤ì •
end_date = datetime.today()
start_date = end_date - timedelta(days=3*365)

# ë°ì´í„° ë‹¤ìš´ë¡œë“œ ë° ì‹œê°í™”
for name, ticker in top10_tickers.items():
    try:
        df = yf.download(ticker, start=start_date, end=end_date)
        if df.empty:
            st.warning(f"{name} ({ticker}) ë°ì´í„°ê°€ ì—†ìŠµë‹ˆë‹¤.")
            continue

        fig = go.Figure()
        fig.add_trace(go.Scatter(x=df.index, y=df['Close'], mode='lines', name=name))
        fig.update_layout(title=f"{name} ({ticker}) ìµœê·¼ 3ë…„ ì£¼ê°€", xaxis_title="Date", yaxis_title="Close Price (USD)")

        st.plotly_chart(fig, use_container_width=True)

    except Exception as e:
        st.error(f"{name} ({ticker}) ë°ì´í„° ë¡œë”© ì¤‘ ì˜¤ë¥˜ ë°œìƒ: {e}")

