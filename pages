import streamlit as st
import yfinance as yf
import plotly.graph_objects as go
from datetime import datetime, timedelta

# 페이지 설정
st.set_page_config(page_title="글로벌 시총 Top10 기업 주가", layout="wide")
st.title("🌎 글로벌 시총 Top10 기업 최근 3년 주가 변동")

# 글로벌 시총 Top10 티커 예시 (2025년 기준 최신 예상)
top10_tickers = {
    'Apple': 'AAPL',
    'Microsoft': 'MSFT',
    'Saudi Aramco': '2222.SR',
    'Alphabet': 'GOOGL',
    'Amazon': 'AMZN',
    'NVIDIA': 'NVDA',
    'Berkshire Hathaway': 'BRK-B',
    'Meta': 'META',
    'TSMC': 'TSM',
    'Tesla': 'TSLA'
}

# 기간 설정
end_date = datetime.today()
start_date = end_date - timedelta(days=3*365)

# 데이터 다운로드 및 시각화
for name, ticker in top10_tickers.items():
    try:
        df = yf.download(ticker, start=start_date, end=end_date)
        if df.empty:
            st.warning(f"{name} ({ticker}) 데이터가 없습니다.")
            continue

        fig = go.Figure()
        fig.add_trace(go.Scatter(x=df.index, y=df['Close'], mode='lines', name=name))
        fig.update_layout(title=f"{name} ({ticker}) 최근 3년 주가", xaxis_title="Date", yaxis_title="Close Price (USD)")

        st.plotly_chart(fig, use_container_width=True)

    except Exception as e:
        st.error(f"{name} ({ticker}) 데이터 로딩 중 오류 발생: {e}")

